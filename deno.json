{
  "version": "0.4.0-rc.0",
  "imports": {
    "@km-api/km-api": "jsr:@km-api/km-api@^1.1.0-0",
    "@koishijs/registry": "npm:@koishijs/registry@^7.0.3",
    "@std/assert": "jsr:@std/assert@^1.0.9",
    "@std/async": "jsr:@std/async@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.7",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/semver": "jsr:@std/semver@^1.0.3",
    "avsc": "npm:avsc@^5.7.7",
    "bson": "npm:bson@^6.10.1",
    "cosmokit": "npm:cosmokit@^1.6.3",
    "inaba": "npm:inaba@^1.1.1",
    "lodash.merge": "npm:lodash.merge@^4.6.2",
    "lodash.trim": "npm:lodash.trim@^4.5.1",
    "lodash.trimend": "npm:lodash.trimend@^4.5.1",
    "magic-regexp": "npm:magic-regexp@^0.8.0",
    "p-try": "npm:p-try@^3.0.0",
    "paseto-ts": "npm:paseto-ts@^1.5.7",
    "reggol": "npm:reggol@^1.7.1",
    "schemastery": "npm:schemastery@^3.14.7",
    "typescript": "npm:typescript@^5.7.3"
  },
  "unstable": [
    "sloppy-imports",
    "net"
  ],
  "tasks": {
    "start": "deno run -A runner.ts",
    "test": "deno test --ignore=./hono-mod --no-check",
    "prepare": "deno run -RW --allow-run ./prepare.ts",
    "tools:compare1": "deno run --allow-net ./tools/compare_q78kg.ts",
    "tools:setup": "deno run -RW ./tools/setup.ts",
    "setup": "deno task tools:setup"
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-namespace",
        "ban-types",
        "no-slow-types",
        "require-await"
      ]
    },
    "exclude": [
      "./http-mod/*",
      "./cordis/*"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true
  },
  "workspace": [
    "./hono-mod",
    "./http-mod/http",
    "./http-mod/socks",
    "./webui/plugins/*",
    "./webui/packages/*",
    "./cordis/packages/*",
    "./packages/*",
    "./plugins/*"
  ],
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx"
  }
}
