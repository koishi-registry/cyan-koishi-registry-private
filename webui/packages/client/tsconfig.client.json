{
  // We do not use "extends" here because dev mode cannot access the root tsconfig.
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "declaration": true,
    "jsx": "preserve",
    "noEmit": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": false,
    "types": [
      "@web/client/global"
    ]
  }
}
